{
  "compilerOptions": {
    /** Language and Environment **/

    /* Specify ECMAScript target version: 'ES3' (default), 'ES5', 'ES2015', 'ES2016', 'ES2017', 'ES2018', 'ES2019', 'ES2020', or 'ESNEXT'. */
    "target": "ESNext",

    /** Modules **/

    /* Specify module code generation: 'none', 'commonjs', 'amd', 'system', 'umd', 'es6', or 'ESNext'. */
    "module": "CommonJS",

    /** Emit **/

    /* Specify an output folder for all emitted files. */
    "outDir": "./dist",
    /* Generate corresponding '.d.ts' file. */
    "declaration": true,
    /* Generate a source map for every emitted file. */
    "declarationMap": true,

    /** Interop Constraints **/

    /* Ensure that casing of files on disk is in sync with the same files in require() calls. */
    "forceConsistentCasingInFileNames": true,

    /** Type Checking **/

    /* Enable all strict type-checking options. */
    "strict": true,

    /* Completeness */

    /* Avoids type errors in third-party libraries */
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ],
}